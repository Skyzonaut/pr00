<!DOCTYPE html>

<html>  
<head>
    <title><%= title %></title>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/stylesheets/css/ventes.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
</head>
<body>
<%- include('../partials/header', title='Ventes'); %>
<main>
    <h1>Notre Catalogue</h1>
    <hr>
    <!-- link section -->
    <div class="container">

        <a href="fournitures?index=1" class="button">
            <div class="button__line"></div>
            <div class="button__line"></div>
            <span class="button__text">Fournitures</span>
            <div class="button__drow1"></div>
            <div class="button__drow2"></div>
        </a>

        <a href="informatique?index=1" class="button">
            <div class="button__line"></div>
            <div class="button__line"></div>
            <span class="button__text">Informatique</span>
            <div class="button__drow1"></div>
            <div class="button__drow2"></div>
        </a>

        <a href="services?index=1" class="button">
            <div class="button__line"></div>
            <div class="button__line"></div>
            <span class="button__text">Services</span>
            <div class="button__drow1"></div>
            <div class="button__drow2"></div>
        </a>

        <a href="impressions?index=1" class="button">
            <div class="button__line"></div>
            <div class="button__line"></div>
            <span class="button__text">Impressions</span>
            <div class="button__drow1"></div>
            <div class="button__drow2"></div>
        </a>
    
    </div>

    <hr>
    <br>

    <div class="wrapper">

        <% items.forEach((item)=> { %>
            <% switch (item.Secteur) {
                case 1 : %>
                    <div class="box service">
                        <div class="product">
                            <span class="name"><%= item.Nom %></span>
                            <img src="/images/question-mark.png">
                            <button>Acheter</button>
                            <span class="description"><%= item.PrixVente %> €</span>
                        </div>
                    </div>
                    <% break;
                
                case 3 : %>
                    <div class="box fourniture">
                        <div class="product">
                            <span class="name"><%= item.Nom %></span>
                            <img src="/images/question-mark.png">
                            <button>Acheter</button>
                            <span class="description"><%= item.PrixVente %> €</span>
                        </div>
                    </div>
                    <% break;

                case 5 : %>
                    <div class="box impression">
                        <div class="product">
                            <span class="name"><%= item.Nom %></span>
                            <img src="/images/question-mark.png">
                            <button>Acheter</button>
                            <span class="description"><%= item.PrixVente %> €</span>
                        </div>
                    </div>
                    <% break;

                case 7 : %>
                    <div class="box info">
                        <div class="product">
                            <span class="name"><%= item.Nom %></span>
                            <img src="/images/question-mark.png">
                            <button>Acheter</button>
                            <span class="description"><%= item.PrixVente %> €</span>
                        </div>
                    </div>
                    <% break;
            } %>
        <% }) %>


        <div class="pagination">
            <a href="#">&laquo;</a>
            <a href="#">...</a>
            <% for(let i = from; i < to; i++) { %>
                <% if(current == i) { %>
                    <a class="active" href="?index=<%= i %>"><%= i %></a>
                <% } else { %>
                    <a href="?index=<%= i %>"><%= i %></a>
                <% } %>
            <% } %>
            <a href="#">...</a>
            <a href="#">&raquo;</a>
        </div>

    </div>
</main>
    <% if(items) { %>
        <script>
            const itemList = <%- JSON.stringify(items) %>;
        </script>
    <% } %>
</body>
</html>
