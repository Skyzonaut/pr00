<!DOCTYPE html>

<html>  
<head>
    <title><%= title %></title>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" href="/stylesheets/css/profil.css">
</head>

    <body>
    <%- include('../partials/header', title='Mentions légales', session=session); %>
        <main>
            <div class="container rounded bg-white mt-5 mb-5">
                <div class="row">
                  <div class="col-md-3 border-right">
                  </div>
                  <div class="col-md-6 border-right">
                    <div class="p-3 py-5">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profil</h4>
                      </div>
            
                      <div class="col-md-6">
                        <label class="labels">Role</label>
                        <input type="text" class="form-control" readonly="readonly" value="">
                      </div>
                      <form action="" method="post" enctype="multipart/form-data">
                        <div class="row mt-2">
                          <div class="col-md-6">
                            <label class="labels">Nom</label>
                            <input type="text" class="form-control" name="nom" placeholder="Entrer un nom"
                              value="">
                          </div>
                          <div class="col-md-6">
                            <label class="labels">Prénom</label>
                            <input type="text" class="form-control" name="prenom" value=""
                              placeholder="Entrer un prenom">
                          </div>
                        </div>
                        <div class="row mt-3">
                          <div class="col-md-12">
                            <label class="labels">Numéro de téléphone</label>
                            <input type="text" class="form-control" name="tel" placeholder="Entrer un numéro de téléphone"
                              value="">
                          </div>
                          <div class="col-md-12">
                            <label class="labels">Nouveau mot de passe</label>
                            <input type="text" class="form-control" name="mdp" value="">
                          </div>
                          <div class="col-md-12">
                            <label class="labels">Confirmer le nouveau mot de passe</label>
                            <input type="text" class="form-control" name="mdp" value="">
                          </div>
                        </div>
                        <br>
            
            
                          <div class="mt-5 text-center">
                            <button class="btn btn-primary profile-button" type="submit">Modifier</button>
                          </div>
                      </form>
            
            
                    </div>
                  </div>
                </div>
        </main>
        <%- include('../partials/footer'); %>
    </body>
 
</html>
